<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.doit.ik.mapper.BoardMapper">
  
  <!-- List<BoardVO> getList(); -->
  <select id="getList" resultType="org.doit.ik.domain.BoardVO">
    <![CDATA[
     SELECT *
     FROM tbl_board
     WHERE bno > 0
     ORDER BY bno DESC
    ]]>
  </select>
  
  <!-- [1] void insert(BoardVO boardVO); 
  <insert id="insert" parameterType="org.doit.ik.domain.BoardVO">
    INSERT INTO tbl_board (bno, title, content, writer)
    VALUES (seq_board.nextval, #{title}, #{content}, #{writer})
  </insert>
  -->
  
  <!-- [2] void insertSelectKey(BoardVO boardVO);-->
  <insert id="insertSelectKey" parameterType="org.doit.ik.domain.BoardVO">
    <selectKey order="BEFORE" resultType="long" keyProperty="bno">
       SELECT seq_board.nextval
       FROM dual
    </selectKey>
    INSERT INTO tbl_board (bno, title, content, writer)
    VALUES ( #{bno}, #{title}, #{content}, #{writer})
  </insert>
    
  <!-- [3] BoardVO read(Long bno); -->
  <select id="read" parameterType="long" resultType="org.doit.ik.domain.BoardVO">
     SELECT *
     FROM tbl_board
     WHERE bno = #{bno}
  </select>
  
  <!-- [4] void update(BoardVO boardVO); -->
  <update id="update">
    UPDATE tbl_board
    SET title=#{title}, content=#{content}, updatedate=SYSDATE
    WHERE bno = #{bno}
  </update>
  
  <!-- [5] int delete(Long bno); -->
  <delete id="delete">
    DELETE FROM tbl_board
    WHERE bno = #{bno}
  </delete>
  
</mapper>









  