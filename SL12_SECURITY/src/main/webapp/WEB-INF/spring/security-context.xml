<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
      http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd">

	<http pattern="/static/**" security="none"/>
	<http pattern="/design/**" security="none"/>
	<http pattern="/css/**" security="none"/>
	<http pattern="/js/**" security="none"/>
	
	<http use-expressions="true">
		<intercept-url pattern="/customer/noticeReg.htm"
			access="isAuthenticated()" />
		<intercept-url pattern="/customer/noticeDel.htm"
			access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/**" access="permitAll" />

		<form-login 
		login-page="/joinus/login.htm" 
		default-target-url="/index.htm" 
		authentication-failure-url="/joinus/login.htm?error=true"
		authentication-success-handler-ref="" />
		<logout  
		logout-url="/joinus/logout.htm" 
		invalidate-session="true" 
		logout-success-url="/"/>
		
		<!-- [1] 403 접근금지 오류 -->
		<!-- CommonController.java -->
		<!-- 
		<access-denied-handler error-page="/common/accessError.htm"/>
 		-->
 		<!-- [2] 403 접근금지 오류 시 다양한 처리를 한 후에 특정 페이지 이동-->
 		<access-denied-handler ref="customAccessDeniedHandler"/>
 		
	</http>
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="hong" authorities="ROLE_USER" password="{noop}1234" />
				<user name="admin"
					authorities="ROLE_USER,ROLE_MANAGER,ROLE_ADMIN" password="{noop}1234" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
	
	<!-- <csrf disabled="true"/> -->
</beans:beans>
